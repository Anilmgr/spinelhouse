                                input(class="form-control" type="date" value="")
                            .clearfix
                            div(class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6")
                                label Invoice Number :
                                input.form-control(type="text" name="address1" placeholder="Invoice Number" required)
                            div(class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6")
                                label Voucher Number :
                                input.form-control(type="text" name="address2"  value="PV46" disabled) 
                            .clearfix
                            div(class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12")
                                label Narration :
                                .form-group
                                    textarea.ta-group(name="address2" rows="5") 
                            .clearfix
                        .col-lg-4
                            div(class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 last")
                                label.upload-img Upload Purchase Invoice :
                                .col-md-12
                                    div(class="fileupload fileupload-new" data-provides="fileupload")
                                        div(class="fileupload-new thumbnail" style="width: 200px; height: 200px;")
                                            img(src="../img/no-image.png" alt="")
                                        div(class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;")
                                        div
                                            span(class="btn btn-theme02 btn-file bttn")
                                                span(class="fileupload-new")
                                                    i(class="fa fa-paperclip") 
                                                    |  Select image
                                                span(class="fileupload-exists")
                                                    i(class="fa fa-undo")
                                                    |  Change
                                                input(type="file" class="default")
                                            a(href="purchasevoucher#" class="btn btn-theme04 fileupload-exists" data-dismiss="fileupload" aria-hidden="true")
                                                i(class="fa fa-trash-o")
                                                | Remove
                            .clearfix
