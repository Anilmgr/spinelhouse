section#main-content
    section.wrapper
        h3
            i(class="fa fa-shopping-cart")
            |   PURCHASES
        .row.mt
            .col-lg-12
                .form-panel
                    h4.mb
                        i(class="fa fa-plus-square") 
                        | &nbsp; Create Voucher    
                    form(role="form" action="/purchases/add_party" method="POST")
                        .col-lg-8
                            div(class="form-group col-xs-12 col-sm-6 col-md-8 col-lg-8")
                                label Purchase Ledger Name :
                                select(id="partyname" name="party" class="form-control")
                                    option(value="") Party's Name
                                    option(value="Afghanistan") Afghanistan
                                    option(value="Åland Islands") Åland Islands
                                    option(value="Albania") Albania
                                    option(value="Algeria") Algeria
                            div(class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4")
                                label Date :
                                //- div(data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="01-01-2014" class="input-append date dpYears")
