//- Main Content
div#login-page
    div(class='container')
        form(class="form-login", method="post" action="/login")
            h2(class="form-login-heading") sign in now
            div(class="login-wrap")
                input(type="text", class="form-control", placeholder="User ID", name="userid", autofocus)
                br
                input(type="password", class="form-control", placeholder="Password", name="password")
                label(class=" remem checkbox")
                    input(type="checkbox", value="remember-me")
                    | Remember me
                    span(class="pull-right")
                        a(data-toggle="modal", href="javascript:;") Forgot Password?
                button(class="btn btn-theme btn-block", type="submit")
                    i(class="fa fa-lock") &nbsp; SIGN IN
                hr
                div(class="login-social-link centered")
                    p OR <br> you can sign in via your social network
                    button(class="btn btn-facebook", type="submit")
                        i(class="fa fa-facebook") 
                        | &nbsp; Facebook
                    | &nbsp;    
                    button(class="btn btn-twitter", type="submit") 
                        i(class="fa fa-twitter")
                        | &nbsp; Twitter
                div(class="registration")
                    | Don't have an account yet?
                    br
                    a(class="", href="signup")  Create an account

